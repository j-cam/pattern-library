    <![endif]-->
    {% block navigation %} {% endblock %}
    <!-- You write code for this content block in another file -->
    {% block content %} {% endblock %}



    {% set modules =
      [

        {name: "HTML Tags", file: "html-tags"},
        {name: "Browser Upgrade", file: "browserupgrade"},
        {name: "Navigation", file: "navigation"},
        {name: "Banner", file: "banner"},
        {name: "Hero", file: "hero"},
        {name: "Info Panel", file: "info-panel"},
        {name: "Tile", file: "tile"}
      ]
    %}

    <div id="module-list">
        <h1>Module List</h1>
        <ul>
        {% for module in modules %}
          <li>
                <div class="content">
                    <a href='{{ module.file + ".html" }}'>{{ module.name }}</a>
                </div>
            </li>
        {% endfor %}
        </ul>
    </div>
    <script type="text/javascript" src="assets/pattern-presentation/prism.js"></script>
    <script type="text/javascript" src="assets/scripts/main.js"></script>


    </body>

</html>
